<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.haier.demo.testflippablestackview.ADActivity">

    <com.haier.demo.testflippablestackview.helper.imageviewhelper.RCRelativeLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        app:round_corner_top_left="16dp"
        app:round_corner_top_right="16dp"
        app:round_corner_bottom_left="16dp"
        app:round_corner_bottom_right="16dp">

        <com.haier.demo.testflippablestackview.helper.imageviewhelper.RCImageView
            android:id="@+id/iv_ad"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:round_corner_top_left="16dp"
            app:round_corner_top_right="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic9"/>

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:background="@color/gray_ef"
            android:layout_alignParentBottom="true">


            <ImageView
                android:id="@+id/iv_close_ad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/close"
                android:layout_centerInParent="true"/>


        </RelativeLayout>


    </com.haier.demo.testflippablestackview.helper.imageviewhelper.RCRelativeLayout>






</LinearLayout>
