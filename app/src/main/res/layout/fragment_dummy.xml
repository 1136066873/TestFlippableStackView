<?xml version="1.0" encoding="utf-8"?>

<com.haier.demo.testflippablestackview.helper.imageviewhelper.RCRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:round_corner_top_left="16dp"
    app:round_corner_top_right="16dp">

    <com.haier.demo.testflippablestackview.helper.imageviewhelper.RCImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:round_corner_top_left="16dp"
        app:round_corner_top_right="16dp"
        android:id="@+id/card_iv"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_index"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="1"/>


</com.haier.demo.testflippablestackview.helper.imageviewhelper.RCRelativeLayout>

